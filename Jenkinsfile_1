pipeline {

agent {
  label 'slave1'
}
  tools {nodejs "node1"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/ankushgupta/node-todo-frontend'
      }
    }
        
    stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }
     
    stage('Test') {
      steps {
         sh 'npm test'
      }
    }      
  }
}
